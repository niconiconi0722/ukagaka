	else
	{
		//---- 自動切換
		"\0\s[0]自動切換到人格%(reference0)。\1\s[10]\w9\w9\e"
	}
}

//---- 切換自別的GHOST ------------------------------------------------------------------
OnGhostChanged
{
	GhostLastBoot		= CurrentTime; 
	CurrentTime			= GETSECCOUNT();
	lastTalk			= ""	//避免剛啓動就出0
	CHAIN.IDName			=""
	if reference0 == "殼"
	{
		//---- 重新啟動完成
		"\0\s[0]重新啟動完成的對話。\1\s[10]\e"
	}
	else
	{
	//從其他人格切換而來
	ChangeFromOthers
	}
}

